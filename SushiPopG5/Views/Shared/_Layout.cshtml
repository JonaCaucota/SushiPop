<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SushiPopG5</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SushiPopG5.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

</head>
<body class="container">
    <header class="bg-light">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand me-0" href="/Home/index">
                    <img src="/images/logo.png" alt="logo">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse" id="navbarSupportedContent">
                    <!-- LAS CATEGORIAS DE LA NAV BAR NO REDIRIGEN A SU CATEGORIA PQ NO ESTAN CREADAS EN LA BD-->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Combos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Piezas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Salads</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Entradas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Salsas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Bebidas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Postres</a>
                        </li>
                        <li class="nav-item">
                            <div class="ms-auto d-flex">
                                <partial name="_LoginPartial"/>
                            </div>
                        </li>
                    </ul>  
                </div>
            </div>
        </nav>
    </header>
    <div class=" pt-4 pb-4">
        <main class="container" role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer mt-auto navbar-fixed-bottom">
        <div class="container">
            <div class="row">
                <div class="col">
                    <a href="/Home/index">
                    <img src="/images/logo_sin_fondo.png" alt="logo footer">
                    </a>
                </div>
                <div class="col">
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-light">Combos</a></li>
                        <li><a href="#" class="text-light">Piezas</a></li>
                        <li><a href="#" class="text-light">Salads</a></li>
                        <li><a href="#" class="text-light">Entradas</a></li>
                        <li><a href="#" class="text-light">Salsas</a></li>
                        <li><a href="#" class="text-light">Bebidas</a></li>
                        <li><a href="#" class="text-light">Postres</a></li>

                    </ul>
                </div>
                <div class="col">
                    <ul class="list-unstyled">
                        <li><a href="/Contactos/Create" class="text-light">Contacto</a></li>
                        <li><a href="/Pedidos/Consulta" class="text-light">Seguir Pedido</a></li>
                        <li><a href="/Reclamos/Create" class="text-light">Reclamos</a></li>
                        <li><a href="/Legal/index" class="text-light">Legales</a></li>
                    </ul>
                </div>
            </div>
            <div class="copyright">
                <p> ® 2023 SushiPOP - Desarrollo Web Grupo 5 ORT </p>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
