@model IEnumerable<SushiPopG5.Models.CarritoItem>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center h3 mb-5">Carrito</h1>

<table class="table">
    <thead class="h2">
        <tr>
            <th>
                Producto
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                Foto
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="py-4 h5">
                    @item.NombreProducto
                </td>
                <td class="py-4 h5">
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td class="py-4">
                    <img src="@item.Producto.Foto" alt="Foto" width="150" height="100">
                </td>
                
                <td class="py-4">
                    <form asp-action="BorrarItem">
                        <input type="hidden" name="carritoItemId" value="@item.Id" />
                        <input type="submit" class="bi bi-trash3-fill h2 text-dark"/>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn bg-secondary" asp-action="BorrarCarrito" asp-controller="CarritoItems"> Cancelar </a>
<a class="btn bg-secondary" asp-action="ComprarCarrito" asp-controller="CarritoItems"> Comprar </a>