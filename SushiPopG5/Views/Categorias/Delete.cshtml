@model SushiPopG5.Models.Categoria

@{
    ViewData["Title"] = "Delete";
    var errorMessage = TempData["ErrorMessage"] as string;
}

<div class="row justify-content-center">
    <div class="col-8">
        <h1 class="text-center">Categorias</h1>
        <h4>Estas seguro que deseas borrar la categoria @Html.DisplayFor(model => model.Nombre)? Esta accion es
            irreversible!</h4>
        <form asp-action="Delete">
            <div class="form-group row justify-content-start p-3 ">
                <div class="row justify-content-around p-3">
                    <div class="col-3 p-3">
                        <a asp-action="Index" class="btn btn-lg btn-primary">Salir</a>
                    </div>
                    <div class="col-3 p-3">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Borrar" class="btn btn-lg btn-danger" />
                    </div>
                </div>
            </div>
        </form>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @errorMessage
            </div>
        }
    </div>
</div>


