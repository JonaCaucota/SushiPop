@model SushiPopG5.Models.Reserva

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center">
    <div class="col-8">
        <h1 class="text-center">Create</h1>
        <hr />
        <div class="container">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row justify-content-start p-3">
                        <div class="col-6 text-center">
                            <h4>
                                <label class="control-label">Nombre</label>
                            </h4>
                        </div>
                        <div class="col-6">
                            <input class="form-control" value= "@ViewData["Nombre"]" readonly />
                        </div>
                    </div>
                    <div class="form-group row justify-content-start p-3">
                        <div class="col-6 text-center">
                            <h4>
                                <label class="control-label">Apellido</label>
                            </h4>
                        </div>
                        <div class="col-6">
                            <input class="form-control" value= "@ViewData["Apellido"]" readonly />
                        </div>
                    </div>
                    <div class="form-group row justify-content-start p-3">
                        <div class="col-6 text-center">
                            <h4>
                                <label asp-for="Local" class="control-label"></label>
                            </h4>
                        </div>
                        <div class="col-6">
                            <select asp-for="Local" class="form-control form-select text-center">
                                <option value="Palermo">Palermo</option>
                                <option value="Recoleta">Recoleta</option>
                                <option value="Belgrano">Belgrano</option>
                                <option value="Caballito">Caballito</option>
                            </select>
                            <span asp-validation-for="Local" class="text-danger"></span>
                        </div>
                    </div>

                    <input type="hidden" asp-for="ClienteId" value="@ViewData["ClienteId"]" readonly />
                    
                    <div class="form-group row justify-content-start p-3">
                        <div class="col-6 text-center">
                            <h4>
                                <label asp-for="FechaYHora" class="control-label"></label>
                            </h4>
                        </div>
                        <div class="col-6 text-center">
                            <h4>
                                <input asp-for="FechaYHora" class="form-control text-center"/>
                                <span asp-validation-for="FechaYHora" class="text-danger "></span>
                                <div class="row justify-content-around p-3">
                                    <div class="col-3 p-3">
                                        <input type="submit" value="Create" class="btn btn-primary"/>
                                    </div>
                                    <div class="col-3 p-3">
                                        <a asp-action="Index" asp-controller="Home" class="btn btn-danger">Borrar</a>
                                    </div>
                                </div>
                            </h4>
                        </div>
                    </div>
                </form>
            </div>
        
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
