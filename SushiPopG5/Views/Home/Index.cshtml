@{
ViewData["Title"] = "Home Page";
ViewData["Day"] = DateTime.Now.ToString("dddd");
}

<div>
    <a class="bg-image w-100 d-flex align-items-center justify-content-center"
        style="background-image: url('/images/bg_hero.png'); height: 380px;" href="/Categorias">

        <h1 class="w-50 text-light" style="margin-left: 400px;">
            Hoy es <span class="text-uppercase highlight">@ViewData["Day"]</span>.
            Disfrutá del mejor sushi <span class="highlight">#EnCasa</span> con amigos.
        </h1>
    </a>
    <section class="w-full my-4">
        <div class="d-flex align-items-center justify-content-center" style="gap: 10px;">
            <h2>Los favoritos</h2>
            <img src="/images/emoticon_smile.png" height="45" />
        </div>
        <div class="container mt-4">
            <div class="row">
                <div class="col-8 home-fav border border-secondary" style="background-image: url('/images/fav_tabla.png');">
                    <p class="w-full bg-75 text-center fw-bold fs-5 py-1 mb-0">Combo 100% salmón Alaska XL de 40
                        piezas</p>
                </div>
                <div class="col-4 home-fav border border-secondary" style="background-image: url('/images/fav_postre.png');">
                    <p class="w-full bg-75 text-center fw-bold fs-5 py-1 mb-0">Postre helado OREO</p>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-4 home-fav border border-secondary" style="background-image: url('/images/fav_arrolladitos.png');">
                    <p class="w-full bg-75 text-center fw-bold fs-5 py-1 mb-0">Empanaditas chinas de carne</p>
                </div>
                <div class="col-8 home-fav border border-secondary" style="background-image: url('/images/fav_tempura.png');">
                    <p class="w-full bg-75 text-center fw-bold fs-5 py-1 mb-0">Langostinos rebozados en panko
                        fritos con salsa tamarindo</p>
                </div>
            </div>
        </div>
    </section>
</div>