@model IEnumerable<SushiPopG5.Models.Contacto>

@{
    ViewData["Title"] = "Index";
}
<div class="row justify-content-center">
    <div class="col-8">
        <h1 class="text-center pb-4">Contactos</h1>
        <table class="table">
            <thead>
            <tr>
                <th class="row justify-content-around">
                    <div class="col-4">
                        @Html.DisplayNameFor(model => model.NombreCompleto)

                    </div>
                    <div class="col-4">
                        @Html.DisplayNameFor(model => model.Leido)
                    </div>
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="row justify-content-around">
                        <div class="col-4">
                            @Html.DisplayFor(modelItem => item.NombreCompleto)
                                
                        </div>
                        <div class="col-4">
                            @Html.DisplayFor(modelItem => item.Leido)
                        </div>
                    </td>
                    <td >
                        <a asp-action="Details" asp-route-id="@item.Id">Leer mensaje</a>
                    </td>
                </tr>
                
            }
            </tbody>
        </table>
    </div>

</div>
