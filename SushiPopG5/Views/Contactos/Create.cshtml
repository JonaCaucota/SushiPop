@model SushiPopG5.Models.Contacto

@{
    ViewData["Title"] = "Create";
}
<div class="row justify-content-center">
    <div class="col-8">
        <h2 class="text-center">Contacto</h2>
        <hr/>
        <form asp-action="Create" class="container">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row justify-content-start p-3">
                <div class="col-6 text-center">
                    <h4>
                        <label asp-for="NombreCompleto" class="control-label"></label>
                    </h4>
                </div>
                <div class="col-6">
                    <input asp-for="NombreCompleto" class="form-control"/>
                    <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row justify-content-start p-3">
                <div class="col-6 text-center">
                    <h4>
                        <label asp-for="Email" class="control-label"></label>
                    </h4>
                </div>
                <div class="col-6">
                    <input asp-for="Email" class="form-control"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row justify-content-start p-3">
                <div class="col-6 text-center">
                    <h4>
                        <label asp-for="Telefono" class="control-label"></label>
                    </h4>
                </div>
                <div class="col-6">
                    <input asp-for="Telefono" class="form-control"/>
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row justify-content-start p-3">
                <div class="col-6 text-center">
                    <h4>
                        <label asp-for="Mensaje" class="control-label"></label>
                    </h4>
                </div>
                <div class="col-6">
                    <input asp-for="Mensaje" class="form-control"/>
                    <span asp-validation-for="Mensaje" class="text-danger"></span>
                    <div class="row justify-content-around p-3">
                        <div class="col-3 p-3">
                            <input type="submit" value="Create" class="btn btn-primary"/>
                        </div>
                        <div class="col-3 p-3">
                            <a asp-action="Index" class="btn btn-danger" >Borrar</a>
                        </div>
                    </div>
                </div>
            </div>

        </form>


        @section Scripts {
            @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
        }

    </div>

</div>